<Window
  x:Class="RemoteClipboard.LoginWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:RemoteClipboard"
  mc:Ignorable="d"
  WindowStartupLocation="CenterScreen"
  Title="LoginWindow"
  Height="450"
  Width="800"
  Loaded="Window_Loaded"
>
  <Grid>
    <StackPanel VerticalAlignment="Center" Margin="20">
      <TextBlock Text="Username:" Margin="0,0,0,5" />
      <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" />
      <TextBlock Text="Password:" Margin="0,0,0,5" />
      <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" />
      <TextBlock Text="Clipboard Id:" Margin="0,0,0,5" />
      <TextBox x:Name="ClipboardIdTextBox" Margin="0,0,0,10" />
      <Button x:Name="LoginButton" Content="Login" Click="LoginButton_Click" Margin="0,10" />
      <ProgressBar
        x:Name="LoadingBar"
        Height="2"
        Margin="0,10"
        IsIndeterminate="True"
        Visibility="Collapsed"
      />
      <TextBlock x:Name="ErrorMessage" Foreground="Red" />
    </StackPanel>
  </Grid>
</Window>
